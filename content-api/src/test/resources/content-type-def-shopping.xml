<ns:contentTypes  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns:ns='http://www.smartitengineering.com/smart-cms/content/content-type-schema'
   xsi:schemaLocation='http://www.smartitengineering.com/smart-cms/content/content-type-schema ../../main/resources/com/smartitengineering/cms/content/content-type-schema.xsd'>
		<contentType namespace="com.smartitengineering.smart-shopping.content">
				<name>Product</name>
				<type>
						<textual>
								<fields>
										<field>
												<name>manufactureID</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
												<required>true</required>
										</field>
										<field>
												<name>name</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
												<required>true</required>
										</field>
										<field>
												<name>description</name>
												<value>
														<string>
																<xml />
														</string>
												</value>
										</field>
								</fields>
						</textual>
				</type>
				<status>
						<value>draft</value>
						<value>marketed</value>
						<value>withdrawn</value>
						<value>obselete</value>
				</status>
		</contentType>

		<contentType namespace="com.smartitengineering.smart-shopping.content">
				<name>Book</name>
				<type>
						<textual>
								<parentTypeNS>com.smartitengineering.smart-shopping.content</parentTypeNS>
								<parentTypeName>Product</parentTypeName>
								<fields>
										<field>
												<name>isbn</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
												<required>true</required>
										</field>
										<field>
												<name>publishers</name>
												<value>
														<collection>
																<item>
																		<content>
																				<typeNS>com.smartitengineering.smart-shopping.content</typeNS>
																				<typeName>Publisher</typeName>
																		</content>
																</item>
														</collection>
												</value>
												<required>true</required>
										</field>
										<field>
												<name>authors</name>
												<value>
														<collection>
																<item>
																		<content>
																				<typeNS>com.smartitengineering.smart-shopping.content</typeNS>
																				<typeName>Author</typeName>
																		</content>
																</item>
														</collection>
												</value>
												<required>true</required>
										</field>
								</fields>
						</textual>
				</type>
				<status>
						<value>draft</value>
						<value>marketed</value>
						<value>obselete</value>
				</status>
		</contentType>

		<contentType namespace="com.smartitengineering.smart-shopping.content">
				<name>Publisher</name>
				<type>
						<textual>
								<fields>
										<field>
												<name>name</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
												<required>true</required>
										</field>
										<field>
												<name>publicationHouse</name>
												<value>
														<content>
																<typeNS>com.smartitengineering.smart-shopping.content</typeNS>
																<typeName>PublicationHouse</typeName>
														</content>
												</value>
												<required>true</required>
										</field>
								</fields>
						</textual>
				</type>
				<status>
						<value>draft</value>
						<value>marketed</value>
						<value>obselete</value>
				</status>
		</contentType>

		<contentType namespace="com.smartitengineering.smart-shopping.content">
				<name>PublicationHouse</name>
				<type>
						<textual>
								<fields>
										<field>
												<name>name</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
												<required>true</required>
										</field>
										<field>
												<name>adress</name>
												<value>
														<content>
																<typeNS>com.smartitengineering.smart-shopping.content</typeNS>
																<typeName>Address</typeName>
														</content>
												</value>
												<required>true</required>
										</field>
								</fields>
						</textual>
				</type>
				<status>
						<value>draft</value>
						<value>marketed</value>
						<value>obselete</value>
				</status>
		</contentType>

		<contentType namespace="com.smartitengineering.smart-shopping.content">
				<name>Address</name>
				<type>
						<textual>
								<fields>
										<field>
												<name>streetAddress</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
										</field>
										<field>
												<name>state</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
										</field>
										<field>
												<name>city</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
										</field>
										<field>
												<name>country</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
										</field>
										<field>
												<name>zipCode</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
										</field>
								</fields>
						</textual>
				</type>
				<status>
						<value>published</value>
				</status>
		</contentType>
		
		<contentType namespace="com.smartitengineering.smart-shopping.content">
				<name>Author</name>
				<type>
						<textual>
								<fields>
										<field>
												<name>name</name>
												<value>
														<string>
																<plain />
														</string>
												</value>
										</field>										
								</fields>
						</textual>
				</type>
				<status>
						<value>draft</value>
						<value>published</value>
				</status>
		</contentType>
</ns:contentTypes>
